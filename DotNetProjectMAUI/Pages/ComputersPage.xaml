<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotNetProjectMAUI.Pages.ComputersPage"
             Title="Computers">

    <ScrollView>
        <ListView Margin="20" x:Name="ComputerList" RowHeight="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="100">
                        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding name}"/>
                            <Label Text="{Binding os, StringFormat='OS: {0}'}"/>
                            <Label Text="{Binding os_version, StringFormat='Version: {0}'}"/>
                            <Label Text="{Binding status, StringFormat='Status: {0}'}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
    
</ContentPage>